{% block content %}
    <h1 class="mb-3 mt-3 font-weight-normal">{{ formTemplate.title }}</h1>

    <form method="post" action="{{ path('submit', {'formTemplateId': formTemplate.id}) }}">
        {% for question in questions %}
        <label>{{ question.questionText }}</label>
        <input type="text" name="form_responses[{{ question.id }}]">
        <input type="hidden" name="formQuestionId[{{ question.id }}]" value="{{ question.id }}">
    {% endfor %}

        <button type="submit" class="btn btn-info">Soumettre</button>
    </form>
{% endblock %}
